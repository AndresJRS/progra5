
@{
    ViewBag.Title = "Login Clientes";
    Layout = "~/Views/Shared/_LayoutRegistroClientes.cshtml";
}

<h2>Login Clientes</h2><hr />

<div class="row">
    <div id="login" class="col-lg-5 offset-lg-5 col-md-7 offset-md-4
                    col-13">
        

        <form action="@Url.Content("~/LoginC/Enter")" method="post">
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input id="usuario" name="usuario"
                       class="form-control" type="text"
                       placeholder="Usuario">
            </div>
            <div class="form-group">
                <label for="contraseña">Contraseña</label>
                <input id="contraseña" name="contraseña"
                       class="form-control" type="password"
                       placeholder="Contraseña">
            </div>
            <button type="submit" class="btn btn-primary mb-2">
                Entrar
            </button>
        </form>
    </div>
</div>

